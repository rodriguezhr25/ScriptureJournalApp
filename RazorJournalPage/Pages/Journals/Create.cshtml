@page
@model RazorJournalPage.Pages.Journals.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Journal</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Journal.BookName" class="control-label"></label>
                <input asp-for="Journal.BookName" class="form-control" />
                <span asp-validation-for="Journal.BookName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Journal.DateAdded" class="control-label"></label>
                <input asp-for="Journal.DateAdded" class="form-control" />
                <span asp-validation-for="Journal.DateAdded" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Journal.Chapter" class="control-label"></label>
                <input asp-for="Journal.Chapter" class="form-control" />
                <span asp-validation-for="Journal.Chapter" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Journal.Verse" class="control-label"></label>
                <input asp-for="Journal.Verse" class="form-control" />
                <span asp-validation-for="Journal.Verse" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Journal.Note" class="control-label"></label>
                <textarea asp-for="Journal.Note" class="form-control" data-val-maxlength-max="300"></textarea>
                <span asp-validation-for="Journal.Note" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
                <a class="btn btn-warning" asp-page="Index">Back to List</a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
