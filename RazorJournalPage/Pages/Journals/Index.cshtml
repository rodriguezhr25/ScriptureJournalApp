@page
@model RazorJournalPage.Pages.Journals.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<form>
    <p>
        Book: <input type="text" name="SearchBook" value="@Model.BookFilter" />
        <input type="submit" value="Filter" />
        Note: <input type="text" name="SearchNote" value="@Model.NoteFilter" />
        <input type="submit" value="Filter" />|
        <a asp-page="./Index">Back to full List</a>
    </p>
</form>
<table class="table">
    <thead>
        <tr>
            <th>
            
                <a asp-page="./Index" asp-route-sortOrder="@Model.NameSort"
                    asp-route-bookFilter="@Model.BookFilter" asp-route-noteFilter="@Model.NoteFilter">                    
                    @Html.DisplayNameFor(model => model.Journal[0].BookName)
                </a>
            </th>
            <th>       
                <a asp-page="./Index" asp-route-sortOrder="@Model.DateSort"
                      asp-route-bookFilter="@Model.BookFilter" asp-route-noteFilter="@Model.NoteFilter"> 
                    @Html.DisplayNameFor(model => model.Journal[0].DateAdded)
                </a>
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Journal[0].Chapter)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Journal[0].Verse)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Journal[0].Note)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Journal) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.BookName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateAdded)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Chapter)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Verse)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Note)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
